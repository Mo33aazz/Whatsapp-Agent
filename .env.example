# WhatsApp AI Bot Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# WAHA (WhatsApp HTTP API) Configuration
WAHA_URL=http://localhost:3000
WAHA_SESSION_NAME=default

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=openai/gpt-4o-mini

# AI Configuration
SYSTEM_PROMPT=You are a helpful AI assistant for WhatsApp. Be concise and friendly in your responses. Keep messages under 2000 characters.

# Memory Configuration
MEMORY_FILE_PATH=./data/conversations.json
CONFIG_FILE_PATH=./data/config.json
STATUS_FILE_PATH=./data/status.json
MEMORY_LOG_FILE_PATH=./data/messages.jsonl

# Webhook Configuration
WEBHOOK_PATH=/webhook

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true
